<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppQuantidade.MainPage">

    <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="50">
        <Label Text="Quantidade" FontSize="30" HorizontalTextAlignment="Center"/>
        <Label x:Name="lblQuantidade" Text="1" FontSize="48" TextColor="#707070" HorizontalTextAlignment="Center"/>
        <StackLayout Orientation="Horizontal" Spacing="40">
            <Button TextColor="Blue" Clicked="Aumentar" Text="+" FontSize="48" BorderWidth="2" BorderColor="#707070" CornerRadius="10" BackgroundColor="White" WidthRequest="90" HeightRequest="90"/>
            <Button TextColor="Red" Clicked="Diminuir" Text="-" FontSize="48" BorderWidth="2" BorderColor="#707070" CornerRadius="10" BackgroundColor="White" WidthRequest="90" HeightRequest="90"/>
        </StackLayout>
    </StackLayout>
</ContentPage>
